<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->



    <style name="CustomPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <!-- if using android.widget.PopupMenu -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textColor"> #000000</item>
        <!-- if using android.support.v7.widget.PopupMenu -->


        <item name="popupMenuStyle">@style/PopupMenu</item>

    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:popupBackground">#FFF7EC</item>
        <item name="android:divider">#00FFFFFF</item>
        <item name="android:dividerHeight">15dp</item>
        <item name="android:layout_width">match_parent</item>

    </style>
</resources>
